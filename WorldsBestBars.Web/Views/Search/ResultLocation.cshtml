@model WorldsBestBars.Model.SearchResult
@{
  var location = WorldsBestBars.Web.Cache.Locations.Instance.GetById(Model.Id);
}
<div class="results location">
  <a href="@("/" + location.Url)"><img src="@Url.GetFirstMedia(location.Id, "245x165.orig")" width="245" height="165" alt="@location.Name" /></a>
  <h3>
    <a href="@("/" + location.Url)">@location.Name</a></h3>
  <div>
    <p>@location.Intro</p>
    <a href="@("/" + location.Url)">Read More</a>
  </div>
</div>
