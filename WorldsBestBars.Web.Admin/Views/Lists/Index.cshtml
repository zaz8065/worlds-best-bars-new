@model IEnumerable<CategorySummary>
@{
  ViewBag.Title = "Index";
}


<div class="container">
  <h1>Lists</h1>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th class="span1">Entity Count</th>
      </tr>
    </thead>
    <tbody>
      @foreach (var category in Model)
      {
        <tr>
          <td><a href="/lists/@category.Id">@category.Name</a></td>
          <td>@category.EntityCount</td>
        </tr>
      }
    </tbody>
  </table>
</div>
